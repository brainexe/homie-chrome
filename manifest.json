{
  "manifest_version": 2,
  "name": "Homie",
  "description": "Homie Popup",
  "version": "0.5",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "48": "icon.png"
  },
  "background": {
    "scripts": ["src/background.js"]
  }
}
